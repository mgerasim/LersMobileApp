<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:LersMobile.MeasurePointProperties.ViewModels.Converters"
             xmlns:local="clr-namespace:LersMobile"
             x:Class="LersMobile.MeasurePointProperties.MeasurePointReportsPage">
    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:ReportTitleConverter x:Key="converter"/>
        </ResourceDictionary>
    </ContentPage.Resources>    
    <ContentPage.Content>
        <StackLayout>
            <ListView ItemsSource="{Binding Reports}" 
                      SelectedItem="{Binding SelectedReport}" 
                      IsPullToRefreshEnabled="True" 
                      RefreshCommand="{Binding RefreshCommand}"
                      IsRefreshing="{Binding IsBusy}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Label Text="{Binding Path=. , Converter={StaticResource converter}}"/>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>