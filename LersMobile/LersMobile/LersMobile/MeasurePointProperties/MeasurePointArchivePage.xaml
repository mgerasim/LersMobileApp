<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"             
             x:Class="LersMobile.MeasurePointProperties.MeasurePointArchivePage"      
			 xmlns:local="clr-namespace:LersMobile"
             xmlns:dg="clr-namespace:Xamarin.Forms.DataGrid;assembly=Xamarin.Forms.DataGrid">
	<ContentPage.ToolbarItems>
		<ToolbarItem Text="Filter"
					 Icon="filter.png"
					 Clicked="Filter_ToolbarItem_Clicked" />
	</ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Fill">
            <Picker IsVisible="False" x:Name="dataTypePicker" SelectedIndexChanged="OnDataTypeSelected"/>

			<dg:DataGrid x:Name="dataGrid"
                         ItemsSource="{Binding Data}" 
                         RowHeight="70" HeaderHeight="50" BorderColor="#CCCCCC"
                         HeaderBackground="#E0E6F8"
                         IsRefreshing="{Binding IsBusy}">
				
				<dg:DataGrid.Columns>
					<dg:DataGridColumn Title="DateTime" PropertyName="DateTime" StringFormat="{}{0:dd.MM.yyyy HH:mm}" ></dg:DataGridColumn>
				</dg:DataGrid.Columns>
				
            </dg:DataGrid>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>