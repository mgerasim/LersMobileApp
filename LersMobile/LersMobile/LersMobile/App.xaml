<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LersMobile.App">
    
	<Application.Resources>
        <ResourceDictionary>
            <Color x:Key="NodeWarning">#FF000000</Color>
            <Color x:Key="NodeError">#FF000000</Color>
            <Color x:Key="NodeNormal">#FF000000</Color>
            <Color x:Key="NodeUnknown">#FF000000</Color>

            <Color x:Key="LoadingIndicator">#CCFFFFFF</Color>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Lang\en-US.xaml" />
                <ResourceDictionary Source="Lang\ru-RU.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
    