<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LersMobile.Incidents.IncidentDetailPage"
             Title="Нештатная ситуация">
    <ContentPage.Content>
        <StackLayout>
            <!-- Подробное описание НС -->
            <StackLayout Orientation="Horizontal">
                <Image Source="{Binding Incident.ImportanceImageSource}"/>
                <Label Text="{Binding Incident.Description}"/>
            </StackLayout>
            
            <!-- Журнал НС -->
            <ListView ItemsSource="{Binding Incident.Log}" ItemSelected="OnItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding ShortMessage}" Detail="{Binding DateTime}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Кнопка для закрытия НС-->
            <Button Text="Закрыть" IsVisible="{Binding Incident.IsActive}" Clicked="OnCloseIncidentClicked" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>